{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "{{SaveProjectSettingsFormTitle}}",
      "horizontalAlignment": "Center",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "Input.Text",
      "id": "AzureDevOpsUrl",
      "label": "{{AzureDevOpsUrlLabel}}",
      "isRequired": true,
      "errorMessage": "{{AzureDevOpsUrlErrorMessage}}",
      "value": "{{AzureDevOpsUrlValue}}",
      "placeholder": "https://dev.azure.com/myorg/myproject"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "{{SaveProjectSettingsActionTitle}}",
      "data": {
        "id": "SaveProjectSettingsAction"
      }
    }
  ]
}
